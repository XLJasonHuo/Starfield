this.show = function(){
  
  fill(random(0,255),random(0,255),random(0,255));
  noStroke();
  var sx = map(this.x / this.z, 0, 1, 0, width);
  var sy = map(this.y / this.z, 0, 1, 0, height);

  var r = map(this.z, 0, width, 16, 0); 

  ellipse(sx, sy, r,r);
  }
  
var speed;
var stars = [];

function setup() {
  createCanvas(600, 600);
  for (var i = 0; i < 800; i++) {
    stars[i] = new Star();
  } 
}
